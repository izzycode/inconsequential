<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Due Date</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% tasks.each do |task| %>
      <tr>
        <td>
          <% if task.completed? %>
            <s><%= task.description %></s>
          <% else %>
            <%= task.description %>
          <% end %>
        </td>
        <td>
          <span class="<%= badge_class_for(task) %>">
            <%=task.due_date&.strftime('%-m/%-d/%y')%>
          </span>
        </td>
        <td>
          <%= link_to "Details", task_sub_tasks_path(task), class: 'btn btn-info' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
